<% include ./share/header.ejs %>

<div class="col-md-12">
    <div class="py-4 text-center">
        <h2><i class="fas fa-sign-in-alt"></i> Acesso IPPetro</h2>
    </div>
</div>

<% if (message.length > 0) { %>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="alert close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <%= message %>
            </div>
        </div>
    </div>
<% } %>

<form class="needs-validation" novalidate action="/admin/login" method="POST" id="formLogin">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <label for="email" class="sr-only">E-mail</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="E-mail" required autofocus>
            <div class="invalid-feedback">
                Informe o E-mail.
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <label for="password" class="sr-only">Password</label>
            <input type="password" name="password" id="password" class="form-control mt-2" placeholder="Senha"
                required>
            <div class="invalid-feedback">
                Informe a senha.
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <button type="submit" class="btn btn-lg btn-primary btn-block mt-3">Entrar</button>
            <!-- <a href="javascript:void(0)" class="btn btn-lg btn-primary btn-block mt-4" id="btnLogin">Entrar</a> -->
        </div>
    </div>
    <!-- </div> -->
</form>
<% include ./share/footer.ejs %>

