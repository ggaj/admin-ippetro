<% include ./share/header.ejs %>
<div class="row">
  <div class="col-md-2 col-6 mb-md-3 order-0">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/pequenosgrupos_"><i class="fas fa-arrow-left"></i></a>
    </div>
  </div>
  <div class="col-md-8 col-12 mb-md-3 order-md-1 order-3">
    <div class="py-2 text-center">
      <div id="pequenosgrupos-aula-id" hidden>
        <%=pequenoGrupo.id%>
      </div>
      <h2>
        <%=pequenoGrupo.nome%>
      </h2>
    </div>
  </div>
  <div class="col-md-2 col-6 mb-md-3 order-2">
    <div class="py-2 text-center">
      <button type="button" class="btn btn-outline-primary btn-lg btn-block" data-toggle="modal" data-target="#exampleModal"><i
          class="fas fa-user-plus"></i></button>
    </div>
  </div>
</div>

<form class="needs-validation" novalidate method="post" action="/pequenosgrupos-aula">
  <div class="row">
    <div class="col-md-3 mb-3">
      <div class="input-group">
        <input type="date" class="form-control" id="pequenosgrupos-aula-date" value="" name="data" required>
        <div class="input-group-append">
          <button class="btn btn-primary" type="button" id="pequenosgrupos-aula-btn">Pesquisar</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <input type="text" id="pequenogrupoId" name="pequenosgrupoId" value="<%=pequenoGrupo.id%>" hidden>
  </div>
  
  <div class="row">
    <div class="col-md-12 order-md-1">
      <table class="table">
        <thead>
          <tr>
            <th scope="col" width="90%">Nome</th>
            <th scope="col" width="10%">Presen√ßa</th>
          </tr>
        </thead>
        <tbody id="pequenosgrupos-aula">
        </tbody>
      </table>
    </div>
  </div>
  <hr class="mb-4">
  <div class="row">
    <div class="col-6 mb-3">
      <button type="submit" class="btn btn-primary btn-lg btn-block btnGravar">Gravar</button>
    </div>
    <div class="col-6 mb-3">
      <button class="btn btn-danger btn-lg btn-block" type="reset">Cancelar</button>
    </div>
  </div>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Visitantes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" >
        <label for="quantidade">Quantidade:</label>
        <input type="number" class="form-control" name="quantidade" id="quantidade" required>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary" id="btnVisitante">Salvar</button>
      </div>
    </div>
  </div>
</div>

<% include ./share/footer.ejs %>