<% include ./share/header.ejs %>
<div class="row">
  <div class="col-md-2 col-6 mb-md-3 order-0">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/admin/cadastros"><i class="fas fa-arrow-left"></i></a>
    </div>
  </div>
  <div class="col-md-8 col-12 mb-md-3 order-md-1 order-3">
    <div class="py-2 text-center">
      <h2>Pequenos Grupos</h2>
    </div>
  </div>
  <div class="col-md-2 col-6 mb-md-3 order-2">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/pequenosgrupos"><i class="fas fa-file"></i></a>
    </div>
  </div>
</div>
<% include ./share/msg.ejs %>
<table class="table table-hover" id="membros-list">
  <thead>
    <tr>
      <th scope="col" class="col-5">Nome</th>
      <th scope="col" class="col-3">Líder</th>
      <th scope="col" class="col-3">Anfitrião</th>
      <!-- <th scope="col" class="col-1 text-center">Ativo</th> -->
      <th scope="col" class="col-1"></th>
    </tr>
  </thead>
  <tbody>
    <%for(var row in pequenosgrupos){%>
      <%if(pequenosgrupos[row].id > 0){%>
        <tr>
          <td class="col-5">
            <%=pequenosgrupos[row].nome%>
          </td>
          <td class="col-3">
            <%=pequenosgrupos[row].lider%>
          </td>
          <td class="col-3">
            <%=pequenosgrupos[row].anfitriao%>
          </td>
          <!-- <td class="col text-center">
              <%= pequenosgrupos[row].ativo == '1' ? 'Sim' : 'Não'%>
          </td> -->
          <td class="col-1"><a href="/pequenosgrupos-edit/<%=pequenosgrupos[row].id%>" class="btn btn-outline-danger">Editar</a>
        </td>
      <%}%>
    <%}%>
  </tbody>
</table>

<% include ./share/footer.ejs %>