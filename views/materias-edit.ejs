<% include ./share/header.ejs %>
<div class="row">
  <div class="col-md-2 mb-md-3">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/cadastros"><i class="fas fa-arrow-left"></i></a>
    </div>
  </div>
  <div class="col-md-8 mb-md-3">
    <div class="py-2 text-center">
      <h2>Nova Matéria</h2>
      <!-- <p class="lead">Below is an example.</p> -->
    </div>
  </div>
</div>
<% include ./share/msg.ejs %>
<form class="needs-validation" novalidate id="formMateria" method="POST" action="/materias">
  <div class="row">
    <input type="text" class="form-control" name="id" id="id" placeholder="" value="<%=materia.id%>" required hidden>
    <div class="col-md-4 mb-3">
      <label for="moduloId">Módulo:</label>
      <select class="custom-select d-block w-100" name="moduloId" id="moduloId" required>
        <option value="">Escolha uma opção...</option>
        <%for(var row in modulos){%>
        <option value="<%=modulos[row].id%>" <%= materia.moduloId == modulos[row].id ? 'selected' : '' %>>
          <%=modulos[row].modulo%>
        </option>
        <%}%>
      </select>
      <div class="invalid-feedback">
        Escolha o módulo.
      </div>
    </div>
    <div class="col-md-7 col-9 mb-3">
      <label for="materia">Matéria:</label>
      <input type="text" class="form-control" name="materia" id="materia" placeholder="" value="<%=materia.materia%>" required>
      <div class="invalid-feedback">
        Informe o nome da matéria.
      </div>
    </div>
    <div class="custom-control custom-checkbox col-md-1 col-2" style="margin-top:37px;">
      <input type="checkbox" class="custom-control-input" id="ativo" name="ativo" <%= materia.ativo == '1' ? 'checked' : ''%>> 
      <label class="custom-control-label" for="ativo">Ativo</label>
    </div>
  </div>
  <hr class="mb-4">
  <div class="row">
    <div class="col-6 mb-3">
      <!-- <a href="javascript:void(0)" class="btn btn-primary btn-lg btn-block btnGravar" id="btnMateria" >Gravar</a> -->
      <button class="btn btn-primary btn-lg btn-block btnGravar" type="submit" >Gravar</button>
    </div>
    <div class="col-6 mb-3">
      <button class="btn btn-danger btn-lg btn-block" type="reset">Cancelar</button>
    </div>
  </div>
</form>
<% include ./share/footer.ejs %>