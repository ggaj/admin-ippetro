<% include ./share/header.ejs %>
<div class="row">
  <div class="col-md-2 mb-md-3">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/licoes-list"><i class="fas fa-arrow-left"></i></a>
    </div>
  </div>
  <div class="col-md-8 mb-md-3">
    <div class="py-2 text-center">
      <h2>Nova Lições</h2>
      <!-- <p class="lead">Below is an example.</p> -->
    </div>
  </div>
</div>
<% include ./share/msg.ejs %>
<form class="needs-validation" id="formLicao" method="POST" action="/licoes">
  <div class="row">
    <div class="col-md-4 mb-3">
      <label for="materiaId">Matéria:</label>
      <select class="custom-select d-block w-100" name="materiaId" id="materiaId" required>
        <option value="">Escolha uma opção...</option>
        <%for(var row in data){%>
        <option value="<%=data[row].id%>">
          <%=data[row].materia%>
        </option>
        <%}%>
      </select>
      <div class="invalid-feedback">
        Escolha a matéria.
      </div>
    </div>
    <div class="col-md-7 col-9 mb-3">
      <label for="licao">Lição:</label>
      <input type="text" class="form-control" name="licao" id="licao" placeholder="" value="" required>
      <div class="invalid-feedback">
        Informe o nome da lição.
      </div>
    </div>
    <div class="custom-control custom-checkbox col-md-1 col-2" style="margin-top:37px;">
      <input type="checkbox" class="custom-control-input" id="ativo" name="ativo">
      <label class="custom-control-label" for="ativo">Ativa</label>
    </div>
  </div>
  <!-- </div> -->
  <!-- </form> -->
  <hr class="mb-4">
  <div class="row">
    <div class="col-6 mb-3">
      <!-- <a href="javascript:void(0)" class="btn btn-primary btn-lg btn-block btnGravar" id="btnLicao" >Gravar</a> -->
      <button type="submit" class="btn btn-primary btn-lg btn-block btnGravar" id="btnLicao" >Salvar</button>
    </div>
    <div class="col-6 mb-3">
      <button class="btn btn-danger btn-lg btn-block" type="reset">Cancelar</button>
    </div>
  </div>
</form>
<% include ./share/footer.ejs %>