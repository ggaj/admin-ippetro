<% include ./share/header.ejs %>
<div class="row">
  <div class="col-md-2 mb-3">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/admin/cadastros"><i class="fas fa-arrow-left"></i></a>
    </div>
  </div>
  <div class="col-md-8 mb-3">
    <div class="py-2 text-center">
      <h2>Cadastro de Professores</h2>
      <!-- <p class="lead">Below is an example.</p> -->
    </div>
  </div>
</div>
<% include ./share/msg.ejs %>
<form class="needs-validation" id="formProfessor" method="POST" action="/professores">
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="materiaId">Materia:</label>
      <select class="custom-select d-block w-100" name="materiaId" id="materiaId" required>
        <option value="">Escolha uma opção...</option>
        <%for(var row in data.materias){%>
        <option value="<%=data.materias[row].id%>">
          <%=data.materias[row].materia%>
        </option>
        <%}%>
      </select>
      <div class="invalid-feedback">
        Escolha a matéria.
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <label for="membroId">Membro:</label>
      <select class="custom-select d-block w-100" name="membroId" id="membroId" required>
        <option value="">Escolha uma opção...</option>
        <%for(var row in data.membros){%>
        <option value="<%=data.membros[row].id%>">
          <%=data.membros[row].nome%>
        </option>
        <%}%>
      </select>
      <div class="invalid-feedback">
        Escolha o membro.
      </div>
    </div>
  </div>
  <hr class="mb-4">
  <div class="row">
    <div class="col-md-6 mb-3">
      <!-- <a href="javascript:void(0)" class="btn btn-primary btn-lg btn-block btnGravar" id="btnProfessor" >Gravar</a> -->
      <button type="submit" class="btn btn-primary btn-lg btn-block btnGravar" id="btnProfessor" >Gravar</button>
    </div>
    <div class="col-md-6 mb-3">
      <button class="btn btn-danger btn-lg btn-block" type="reset">Cancelar</button>
    </div>
  </div>
</form>
<% include ./share/footer.ejs %>