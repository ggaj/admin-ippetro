<% include ./share/header.ejs %>
<div class="row">
  <div class="col-md-2 col-6 mb-md-3 order-0">
    <div class="py-2 text-center">
      <a class="btn btn-outline-primary btn-lg btn-block" href="/ebd"><i class="fas fa-arrow-left"></i></a>
    </div>
  </div>
  <div class="col-md-8 col-12 mb-md-3 order-md-1 order-3">
    <div class="py-2 text-center">
      <div id="saladeaulaId" hidden>
        <%=data.saladeaulaId%>
      </div>
      <h2>
        <%=data.sala%>
      </h2>
    </div>
  </div>
  <div class="col-md-2 col-6 mb-md-3 order-2">
    <div class="py-2 text-center">
      <button type="button" class="btn btn-outline-primary btn-lg btn-block" data-toggle="modal" data-target="#exampleModal"><i
          class="fas fa-user-plus"></i></button>
    </div>
  </div>
</div>

<form class="needs-validation" novalidate method="post" action="/diadeaula">
  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="input-group">
        <!-- <label for="diadeaula">.</label> -->
        <input type="date" class="form-control" id="diadeaula" value="<%=dia%>" name="diadeaula" required>
        <div class="input-group-append">
          <button class="btn btn-primary" type="button" id="btnDataAula">Data da Aula</button>
        </div>
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <!-- <label for="saladeaulaebd">Nome para pesquisa:</label> -->
      <input type="text" class="form-control" name="saladeaulaebd" id="saladeaulaebd" placeholder="Informe o nome para a pesquisa...">        
    </div>
  </div>

  <div class="row">
    <input type="text" id="saladeaulaId" name="saladeaulaId" value="<%=data.saladeaulaId%>" hidden>
  </div>
  <div class="row">
    <div class="col-md-12 order-md-1">
      <table class="table" id="tableAula">
        <thead>
          <tr>
            <th scope="col" width="75%" onclick="sortTable(0,'tableAula')">Nome</th>
            <th scope="col" width="75%" onclick="sortTable(1,'tableAula')">Tipo de membro</th>
            <th scope="col" width="10%" onclick="sortTable(2,'tableAula')">Presen√ßa</th>
          </tr>
        </thead>

        <tbody id="presentesdodia">
        </tbody>
      </table>
    </div>
  </div>
  <hr class="mb-4">
  <div class="row">
    <div class="col-6 mb-3">
      <!-- <a href="javascript:void(0)" class="btn btn-primary btn-lg btn-block btnGravar" id="btnLicao" >Gravar</a> -->
      <button type="submit" class="btn btn-primary btn-lg btn-block btnGravar">Gravar</button>
    </div>
    <div class="col-6 mb-3">
      <button class="btn btn-danger btn-lg btn-block" type="reset">Cancelar</button>
    </div>
  </div>
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Visitantes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" >
        <!-- <input type="text" id="dia" name="dia" value="<%=dia%>"> -->
        <label for="quantidade">Quantidade:</label>
        <input type="number" class="form-control" name="quantidade" id="quantidade" required>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary" id="btnVisitante">Salvar</button>
      </div>
    </div>
  </div>
</div>

<% include ./share/footer.ejs %>